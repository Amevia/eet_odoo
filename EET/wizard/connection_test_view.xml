<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_eet_connection_test_form" model="ir.ui.view">
        <field name="name">view.eet.connection.test.form</field>
        <field name="model">eet.connection.test</field>
        <field name="arch" type="xml">
            <form string="Test Connection">
                <group>
                    <group>
                        <field name="environment" required="True" />
                        <field name="payment_id" required="True" />
                    </group>
                    <group>
                        <field name="estd_reg_no" required="True" />
                    </group>
                </group>
                <footer>
                    <button name="test_connection" string="Test" type="object" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
</odoo>